- if project.builds_enabled?
  %li{ class: 'gl-px-5!' }
    %span.light
      = _('Shared Runners:')
    %strong
      - if project.shared_runners_enabled?
        = _('Enabled')
        - if project.shared_runners_minutes_limit_enabled?
          = sprintf(_('(Limited to %{quota} pipeline minutes per month)'), { quota: project.ci_minutes_usage.quota.total })
        - else
          = _('(Unlimited pipeline minutes)')
      - else
        = _('Disabled')
