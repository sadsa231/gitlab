= nav_link(controller: %w[admin/geo/nodes admin/geo/projects admin/geo/uploads admin/geo/settings admin/geo/designs admin/geo/replicables]) do
  = link_to admin_geo_nodes_path, class: "has-sub-items", data: { qa_selector: "admin_geo_menu_link" } do
    .nav-icon-container
      = sprite_icon('location-dot')
    %span.nav-item-name
      #{ _('Geo') }
  %ul.sidebar-sub-level-items
    = nav_link(controller: '%w(admin/geo/nodes)', html_options: { class: "fly-out-top-item" }) do
      = link_to admin_geo_nodes_path do
        %strong.fly-out-top-item-name
          #{ _('Geo') }
      %li.divider.fly-out-top-item
      = nav_link(controller: %w[admin/geo/nodes admin/geo/projects admin/geo/uploads admin/geo/designs admin/geo/replicables]) do
        = link_to admin_geo_nodes_path, title: _('Sites') do
          %span
            = _('Sites')
      = nav_link(path: 'admin/geo/settings#show') do
        = link_to admin_geo_settings_path, title: _('Settings') do
          %span
            = _('Settings')
